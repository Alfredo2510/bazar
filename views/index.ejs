<h1 class="name">Productos destacados</h1>
<div class="padre">
    
<% pro.forEach((e) => {%>
    <div class="panel panel-default">
        <div class="panel-heading">
            <%if (e.name) {%>   
            <% var source = "/uploads/myImage-" %>
            <% source += e.ID %>
            <% source += ".png" %>    
            <img src='<%= source %>' style="width 300px; height: 171px;">
            <% } else {%>
            <h3>Sin nombre</h3>
            <% } %>
        </div>
        <div class="panel-body">            
            <h3> <%= e.name%></h3>
            <h4><strong>Precio:</strong>  $<%= e.money %> </h4>
            <h4> <strong>Categoria:</strong>  <%= e.category %></h4>
            <h4> <strong>Descripci√≥n:</strong> <%= e.description %></h4>

     
        </div>
    </div>

    <% }) %>
</div>
